<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.backbencherslab.gymbuddy.AccountSettingsFragment"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_fullname"
                android:ems="10"
                android:id="@+id/fullname"
                android:maxLength="55"
                style="@android:style/Animation.Dialog"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/placeholder_gymlocation"
                android:id="@+id/location"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/placeholder_workout"
                android:inputType="textMultiLine"
                android:id="@+id/bio"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/city"
                android:visibility="gone"
                android:ems="10"
                android:id="@+id/facebookPage"
                android:maxLength="255"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/country"
                android:visibility="gone"
                android:id="@+id/instagramPage"
                android:maxLength="255"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />



            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_profile_allow_show_birth"
                android:id="@+id/allowShowDatebirth"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:drawableLeft="@drawable/gender"
                android:id="@+id/selectGender"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:id="@+id/selectBirth"
                android:drawableLeft="@drawable/calend"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Workout_time"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:drawableLeft="@drawable/morning"
                android:id="@+id/selectRelationshipStatus"
                android:textColor="@color/dark_blue" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_workout"
                android:id="@+id/selectPoliticalViews"
                android:drawableLeft="@drawable/mon"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_blue" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_personal_priority"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:id="@+id/selectPersonalPriority"
                android:drawableLeft="@drawable/goal"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_world_view"
                android:id="@+id/selectWorldView"
                android:background="@drawable/button_white"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_important_in_others"
                android:id="@+id/selectYouLooking"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/button_white"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_smoking_views"
                android:visibility="gone"
                android:id="@+id/selectSmokingViews"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_white"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_alcohol_views"
                android:visibility="gone"
                android:id="@+id/selectAlcoholViews"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_white"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_you_looking"
                android:id="@+id/selectImportantInOthers"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_white"
                android:textColor="@color/dark_blue" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_you_like"
                android:id="@+id/selectYouLike"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_white"
                android:textColor="@color/dark_blue" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>